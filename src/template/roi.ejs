<script>
  const chart_roi_labels = [
    [/- label; /]
  ];

  const chart_roi_data = {
    labels: chart_roi_labels,
    datasets: [
      {
        type: "bar",
        label: 'ROI',
        borderColor: function (context) {
          const index = context.dataIndex;
          const value = context.dataset.data[index];
          return value < 0 ? '#EE6352' : "#57A773"
        },
        backgroundColor: function (context, options) {
          const index = context.dataIndex;
          const value = context.dataset.data[index];
          return value < 0 ? '#EE635250' : "#57A77350"
        },
        data: [
          [/- dataset_4; /]
        ],
        yAxisID: 'roi_dataset_1',
        borderWidth: 2
      }
    ]
  };

  const chart_roi_config = {
    type: 'line',
    data: chart_roi_data,
    responsive: true,
    options: {
      scales: {
        roi_dataset_1: {
          display: true,
          title: { display: true, text: "ROI in %", color: "#FFFFFF" },
          type: 'linear',
          position: 'left',
          min: -[/- dataset_4_max /],
          max: [/- dataset_4_max /]
        },
      }
    }
  }
</script>

<script>
  const chartRoi = new Chart(
    document.getElementById('chart_roi'),
    chart_roi_config
  );
</script>