{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2021", "dom"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"]
    },
    "outDir": "lib"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "coverage",
    "doc",
    "**/__mocks__/*",
    "**/__tests__/*"
  ]
}
